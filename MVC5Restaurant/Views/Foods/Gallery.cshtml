@model IEnumerable<MVC5Restaurant.Models.Food>

@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Gallery</h2>

<div class="row">
    @Html.ActionLink("New Menu Item", "New", "Foods", new { @class = "btn btn-primary" })
</div>

<br /><br />

@foreach (var food in Model)
{
    <div class="col-md-3 col-sm-4 col-xs-6 food-image-container gallery-container">
        @Html.Partial("_GalleryLinkPartial", food)
    </div>
}

@section scripts
{
    @Scripts.Render("~/Scripts/myscripts/open-magnificpopup.js")
}
