@model MVC5Restaurant.Models.EmailSender

@{
    ViewBag.Title = "About";
}
<h2 class="text-center">Welcome to the MVC5DessertCafe!</h2>

<div class="row">
    <p class="text-center">This is my demo ASP.NET MVC5 web project. If you like what you see, give me a shout!</p>
</div>

<div class="col-md-6">
    <h3>Give Us A Shout!</h3>
    <div class="col-md-12">
        @using (Html.BeginForm("Send", "Home"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "First Last" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Subject)
                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", placeholder = "Example: do you do parties?" })
                @Html.ValidationMessageFor(model => model.Subject)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, "Email Address:")
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "youremail@example.com", type = "email" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Body, "Message:")
                @Html.TextAreaFor(model => model.Body, new { @class = "form-control", placeholder = "Your message here" })
                @Html.ValidationMessageFor(model => model.Body)
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit"><i class="fa fa-paper-plane"></i> Send!</button>
            </div>
        }
    </div>
</div>

<div class="col-md-6">
    <h3>Visit Us</h3>
    <div class="col-md-12">
        <p>MVC5DessertCafe</p>
        <p>73 Varick Street</p>
        <p>New York, NY 10013</p>
        <iframe id="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3023.793581138673!2d-74.00851098411835!3d40.72256037933077!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c2598b4a7f9733%3A0xd51bd44874c8bab2!2s73+Varick+St%2C+New+York%2C+NY+10013!5e0!3m2!1sen!2sus!4v1482181797204" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}